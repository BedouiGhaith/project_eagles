{% extends 'admin.html.twig' %}

{% block title %}Edit Evenement{% endblock %}

{% block body %}
    <h1>Modifier un évenement</h1>

<div style="display: flow-root;align-items: center;justify-content: center; margin-top: 40px; padding: 30px;">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Modifier événement</h5>

            <!-- General Form Elements -->
            {{ form_start(form) }}
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Nom Evenement</label>
                <div class="col-sm-10">
                    {{ form_widget(form.event_name,{ 'attr':{'class':'form-control'}})   }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(form.description,{ 'attr':{'class':'form-control'}})   }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Date d'evenement</label>
                <div class="col-sm-10">
                    {{ form_widget(form.event_date,{ 'attr':{'class':'form-control'}})   }}
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Image d'évenement</label>
                <div class="col-sm-10">
                    {{ form_widget(form.image,{ 'attr':{'class':'form-control'}})   }}
                </div>
            </div>
            <div class="row mb-3">
                <button class="btn btn-success btn-icon-split"><span class="icon text-white-50">
                                            <i class="fas fa-check"></i>
                                        </span>
                    {{ button_label|default('Update') }}</button></button>

            </div>
        </div>








        {{ form_end(form) }}

    </div>
</div>
    <a href="{{ path('evenement_index') }}">Retour au liste des événements</a>
{% endblock %}
