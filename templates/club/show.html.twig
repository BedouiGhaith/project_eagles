{% extends 'test.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-default btn-transparent" role="button">
        <button  href="{{ path('app_club_edit', {'id': club.id}) }}">Modifier ce club </button></a>

   <button style="text-decoration-color: black">{{ include('club/_delete_form.html.twig') }}</button>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nom_club</th>
                <td>{{ club.nom_club }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ club.dateCreation ? club.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Club_owner</th>
                <td>{{ club.club_owner }}</td>
            </tr>
            <tr>
                <th>Nbr_members</th>
                <td>{{ club.nbr_members }}</td>
            </tr>
        </tbody>
    </table>


    <B><a style="color:#642517" href="{{ path('app_club_index') }}">Retour au liste des clubs</a></B>



{% endblock %}
